# - Config file for the @CMAKE_PROJECT_NAME_UPPERCASE@ library
# It defines the following variables
#  @CMAKE_PROJECT_NAME_UPPERCASE@_INCLUDE_DIRS - include directories for @CMAKE_PROJECT_NAME_UPPERCASE@
#  @CMAKE_PROJECT_NAME_UPPERCASE@_LIBRARIES    - libraries to link against

# Compute paths
get_filename_component(@CMAKE_PROJECT_NAME_UPPERCASE@_CMAKE_DIR "${CMAKE_CURRENT_LIST_FILE}" PATH)

# Set include directories
set(@CMAKE_PROJECT_NAME_UPPERCASE@_INCLUDE_DIRS "${CMAKE_CURRENT_LIST_DIR}/../../../include")

# Set library directories
set(@CMAKE_PROJECT_NAME_UPPERCASE@_LIBRARY_DIRS "${CMAKE_CURRENT_LIST_DIR}/../../lib")

# Import targets
include("${@CMAKE_PROJECT_NAME_UPPERCASE@_CMAKE_DIR}/lib/cmake/@CMAKE_PROJECT_NAME@/@CMAKE_PROJECT_NAME_UPPERCASE@Targets.cmake")

# Create imported targets for @CMAKE_PROJECT_NAME_UPPERCASE@
foreach(${PROJECT_MODULE_TARGET} "@CMAKE_TARGETS@")
	target_include_directories(${PROJECT_MODULE_TARGET} INTERFACE ${@CMAKE_PROJECT_NAME_UPPERCASE@_INCLUDE_DIRS})
	target_link_directories(${PROJECT_MODULE_TARGET} INTERFACE ${@CMAKE_PROJECT_NAME_UPPERCASE@_LIBRARY_DIRS})
	target_link_libraries(${PROJECT_MODULE_TARGET} INTERFACE ${@CMAKE_PROJECT_NAME_UPPERCASE@_LIBRARIES})
endforeach()

